                android:padding="10sp"
                android:text="Con cua"
                android:textSize="12sp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/row1Surname"
                android:padding="10sp"
                android:textSize="12sp"
