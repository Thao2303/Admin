                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:textSize="12sp" />

        </TableRow>
        <TableRow>

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="wrap_content"
